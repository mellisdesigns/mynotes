<!--
    The forms to add products and rows
-->
<div class="row">
    
    <!--
        Add a new product
    --> 
    
    <div class="col s6">
        
        <!-- Add an ember input for quick product add -->
        <div class="input-field">
            
            {{input type="text" id="new-product" placeholder="Add in a new product." value=newProduct action="createProduct"}}
            
        </div>
              
        
    </div>
    
    <div class="col s6">
        <!-- Add an ember input for quick note add -->
        <div class="input-field">
            
            {{input type="text" id="new-note" placeholder="Add a note to selected product." value=newNote action="createNote" disabled=disableCommentForm}}
            
        </div>
        
    </div>
    
</div>

<!--
    The product list
-->
<div class="row">
    
    <div class="col s6">
        
        <ul class="collection">

            {{#each product in model}}

                
                <a {{action "selectProduct" product on="click"}} href="#!" class="collection-item {{if product.isSelected 'active'}}">{{product.name}} <span class="badge {{if product.isSelected 'white-text'}}">{{product.totalnotes}} notes</span></a>
            

            {{/each}}

        </ul>
        
    </div>

<!--
    The note list
    Here we will run through each product and then each products notes
-->
    <div class="col s6">
           
        {{#each note in selectedProduct.notes}}
        
            {{#note-card title=note.title body=note.body color=note.color}}
        
            {{/note-card}}

        {{/each}}
        
    </div>
    
</div>
